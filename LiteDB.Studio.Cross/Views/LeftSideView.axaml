             x:Class="LiteDB.Studio.Cross.Views.LeftSideView">
    <Design.DataContext>
        <viewModels:DataBaseExplorerViewModel />
    </Design.DataContext>

	<TreeView x:Name="DatabasesTreeView" ItemsSource="{Binding Databases}">
		<TreeView.DataTemplates>
			<TreeDataTemplate DataType="vm:DatabaseViewModel" ItemsSource="{Binding SysCollections.Collections}">
				<TextBlock Text="{Binding Name}" />
			</TreeDataTemplate>
			<DataTemplate DataType="vm:CollectionSetViewModel">
				<TextBlock Text="{Binding Name}" />
			</DataTemplate>
		</TreeView.DataTemplates>
	</TreeView>
	
